{
  "name": "i-want-to-party",
  "version": "1.0.0",
  "description": "TibiaTools",
  "main": "index.js",
  "author": "Wojciech Ossowski",
  "license": "MIT",
  "private": true,
  "scripts": {
    "heroku-postbuild": "(yarn install:client) && (yarn bundle)",
    "install:client": "(cd client && yarn install)",
    "bundle": "yarn build:backend && yarn build:client",
    "build:backend": "yarn webpack --config ./backend/webpack/build.backend.config.js",
    "build:client": "(cd client && yarn build)",
    "start": "node backend_bundle.js",
    "test": "yarn jest",
    "build:dev": "yarn webpack --mode=development --config ./backend/webpack/build.backend.config.js",
    "build:backend:watch": "yarn webpack --mode=development --config ./backend/webpack/build.backend.config.js --watch",
    "environment:start": "$(cd backend/docker && docker-compose up -d > /dev/null)",
    "environment:stop": "$(cd backend/docker && docker-compose down > /dev/null)",
    "postgres:start": "$(cd backend/docker && docker-compose up -d tibia_database)",
    "postgres:rm": "$(cd backend/docker && docker-compose rm -f tibia_database > /dev/null)",
    "postgres:stop": "$(cd backend/docker && docker-compose stop tibia_database > /dev/null)",
    "postgres:restart": "yarn postgres:stop && yarn postgres:rm && yarn postgres:start",
    "postgres:setup": "yarn knex migrate:latest && yarn knex seed:run",
    "knex": "./node_modules/.bin/knex --knexfile ./backend/src/common/infrastructure/repositories/postgres/knexfile.js"
  },
  "dependencies": {
    "axios": "^0.19.1",
    "bluebird": "^3.7.2",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "heroku-ssl-redirect": "^0.0.4",
    "ioredis": "^4.14.1",
    "knex": "^2.4.0",
    "morgan": "^1.9.1",
    "pg": "^7.17.1"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/bluebird": "^3.5.29",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/ioredis": "^4.14.4",
    "@types/jest": "^24.9.0",
    "@types/node": "^13.1.7",
    "awesome-typescript-loader": "^5.2.1",
    "jest": "^24.9.0",
    "ts-jest": "^24.3.0",
    "typescript": "^3.7.5",
    "webpack": "4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-node-externals": "^1.7.2"
  },
  "engines": {
    "node": "12.x"
  }
}
